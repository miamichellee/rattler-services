<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#124E2D"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnStuAccounts"
        android:layout_width="173dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="219dp"
        android:layout_marginBottom="175dp"
        android:background="#F28300"
        android:text="Student Accounts"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnFinanAid"
        android:layout_width="173dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="258dp"
        android:background="#F28300"
        android:text="Financial Aid"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="173dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="219dp"
        android:layout_marginBottom="258dp"
        android:background="#F28300"
        android:text="Registrar's Office"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnStuHealth"
        android:layout_width="173dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="175dp"
        android:background="#F28300"
        android:text="Student Health Services"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnStuAffairs"
        android:layout_width="173dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="88dp"
        android:background="#F28300"
        android:text="Student Affairs"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnParking"
        android:layout_width="173dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="219dp"
        android:layout_marginBottom="87dp"
        android:background="#F28300"
        android:text="Parking Services"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="FAMU Departments"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="517dp"
        android:layout_height="401dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="1dp"
        app:srcCompat="@drawable/famu_fulbright" />

</RelativeLayout>